<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/pay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".userData">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:background="@drawable/yellow_border"
            android:layout_width="360dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="200dp"
            android:padding="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Personal Details"

                android:textColor="@color/black"
                android:textSize="35sp"
                android:textStyle="bold" />
            <EditText
                android:textColor="@color/black"
                android:id="@+id/p_name"
                android:layout_width="280dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/yellow_border"
                android:drawableLeft="@drawable/baseline_name"
                android:drawablePadding="8dp"
                android:hint="your name"
                android:layout_gravity="center"
                android:padding="8dp" />

            <EditText
                android:textColor="@color/black"
                android:id="@+id/p_address"
                android:layout_width="280dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/yellow_border"
                android:drawableLeft="@drawable/baseline_home"
                android:drawablePadding="8dp"
                android:hint="address"
                android:layout_gravity="center"
                android:padding="8dp" />

            <EditText
                android:textColor="@color/black"
                android:id="@+id/p_contact"
                android:layout_width="280dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/yellow_border"
                android:drawableLeft="@drawable/baseline_phone"
                android:drawablePadding="8dp"
                android:hint="contact number"
                android:padding="8dp" />
            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:text="Submit"
                android:id="@+id/data_btn"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>